@model EntityLayer.Concrete.Patient
@{
    ViewBag.Title = "EditPatient";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <!-- Main content -->
    <section class="content">
        <div class="row-1">
            <div class="col-md-6">
                <br />
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Hasta Güncelleme</h3>
                    </div>
                    @using (Html.BeginForm("EditPatient", "AdminPatient", FormMethod.Post))
                    {
                        <div class="card-body">
                            <div class="form-group">
                                @Html.HiddenFor(x => x.HastaID)
                            </div>
                            <div class="form-group">
                                @Html.Label("Hasta TC")
                                @Html.TextBoxFor(x => x.TC, new { @class = "form-control disabled",@readonly = true })
                            </div>
                            <div class="form-group">
                                @Html.Label("Hasta Ad")
                                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Ad)
                            </div>
                            <div class="form-group">
                                @Html.Label("Hasta Soyad")
                                @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Soyad)
                            </div>
                            <div class="form-group">
                                @Html.Label("Hasta Doğum Tarihi")
                                @Html.TextBoxFor(x => x.DogumTarihi, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.DogumTarihi)
                            </div>
                            <div class="form-group">
                                @Html.Label("Hasta Cinsiyet")
                                @Html.DropDownListFor(x => x.Cinsiyet, new List<SelectListItem> {
                                    new SelectListItem() {Text="Erkek",Value="Erkek" ,},
                                    new SelectListItem() {Text="Kadın",Value="Kadın" },
                                }, "Cinsiyet")
                                @Html.ValidationMessageFor(x => x.Cinsiyet)
                            </div>
                            <div class="form-group">
                                @Html.Label("Hasta Adres")
                                @Html.TextAreaFor(x => x.Adres, 5, 60, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Adres)
                            </div>
                            <div class="form-group">
                                @Html.Label("Hasta Telefon Numarası")
                                @Html.TextBoxFor(x => x.Tel, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Tel)
                            </div>
                            <div class="col-12">
                                <button class="btn btn-success float-right">Kaydet</button>
                                <br />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

</body>
</html>

