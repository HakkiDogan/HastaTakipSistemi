@model EntityLayer.Concrete.PatientArrival
@{
    ViewBag.Title = "AddPatientArrival";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <!-- Main content -->
    <section class="content">
        <div class="row-1">
            <div class="col-md-6">
                <br />
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Hasta Geliş</h3>
                    </div>
                    
                    @using (Html.BeginForm("AddPatientArrival", "PatientArrival", FormMethod.Post))
                    {
                        <div class="card-body">
                            <div class="form-group">
                                @Html.HiddenFor(x =>x.HastaID)                                
                            </div>
                            <div class="form-group">                              
                                @Html.Label("Servis")
                                @Html.DropDownListFor(x=>x.ServisID,(List<SelectListItem>)ViewBag.Servisler, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Doktor")
                                @Html.DropDownListFor(x=>x.DoktorID,(List<SelectListItem>)ViewBag.Doktorlar, new { @class = "form-control" })
                            </div>                           
                            <div class="col-12">
                                <button class="btn btn-success float-right">Ekle</button>
                                <br />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

</body>
</html>

